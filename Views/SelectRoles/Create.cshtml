@model Blog.Models.BlogRoles
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Create Role</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="container">
        <fieldset>
            <legend>Create Role</legend>
            <form asp-action="Create" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                @if(ViewData["roleCreate"] as string != null)
                {
                <div class="text-success">@ViewData["roleCreate"]</div>
                    
                }
                <div class="form-group">
                    <div>
                        <label asp-for="name" class="">Role name:</label>
                    </div>
                    <div>
                        <input asp-for="name" class="form-control w-50" />
                        <span asp-validation-for="name"></span>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="p-2 btn btn-primary" />
                </div>

            </form>
        </fieldset>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
