@using Blog.Models
@model BlogData

@{
    ViewData["Title"] = "Add Blog";
}

<h1 class="mt-4">>Add Blog</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Blog List</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Blogs
    </div>
    <div class="card-body">
       <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div>
                    <label asp-for="Title" class="control-label">
                    </label>
                </div>
                <div>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="Tags" class="control-label">
                    </label>
                </div>
                <div>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="BlogCategory" class="control-label">
                    </label>
                </div>
                <div>
                  <select asp-for="BlogCategory" asp-items="@ViewBag.Category"  class="form-control"></select>
                <span asp-validation-for="BlogCategory" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="ImageUrl" class="control-label">
                    </label>
                </div>
                <div class="custom-file">
                <input asp-for="ImageUrl" class="custom-file-input" 
                id="blogImage"
                onchange="document.getElementById('blogImage').src = window.URL.createObjectURL(this.files[0])"/>
                <label class="cusstom-file-label" for="imageUrl">Choose Image</label>
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

                <img id="blogImage" src="" alt="Blog image" width="150" height="150"
                    style="border: 1px; margin-top: 20px; margin-left: 120px"/>
            </div>

            <div class="form-group row">
                <div>
                    <label asp-="Content" class="control-label">
                    </label>
                </div>
                <div>
                    <textarea asp-for="Content" class="form-control">

                    </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
           
            <br />
            <div>
                <input type="submit" class="btn btn-primary" value="Save" />
                <input type="submit" class="btn btn-secondary" value="View Details" asp-action="CategoryList" />
            </div>
       </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
