@using Blog.Models
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
}

<h1 class="mt-4">Category Details</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Category Details</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Categories
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryId)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                <a asp-route-Id="@item.CategoryId" class="btn btn-secondary"
                           asp-action="Edit">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-danger" data-bs-target="#delete" data-bs-toggle="modal">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>

                                <div class="modal fade" id="delete" aria-labelledby="deleteBlog" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Delete Category</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container">
                                                    <h2>Do you want to delete Categoty?</h2>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <a class="btn btn-danger" asp-route-Id="@item.CategoryId" asp-action="Delete">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="text-danger">
                        No Category to show
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @if (TempData["AddCategory"] != null)
    {
        <script type="text/javascript">
            var message = '@TempData["Addcategory"]';
            alertify.success(message);
        </script>
    }

    @if (TempData["DeleteCategory"] != null)
    {
        <script type="text/javascript">
            var message = '@TempData["DeleteCategory"]';
            alertify.error(message);
        </script>
    }

    @if (TempData["EditCategory"] != null)
    {
        <script type="text/javascript">
            var message = '@TempData["EditCategory"]';
            alertify.success(message);
        </script>
    }
    @if (TempData["ErrorCategory"] != null)
    {
        <script type="text/javascript">
            var message = '@TempData["ErrorCategory"]';
            alertify.error(message);
        </script>
    }

}


