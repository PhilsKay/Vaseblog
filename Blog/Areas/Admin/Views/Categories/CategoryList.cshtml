@using Blog.Models
@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
}

<h1 class="mt-4">>Category List</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Category List</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Categoried
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td asp-for="@item.CategoryId"></td>
                            <td asp-for="@item.CategoryName"></td>
                            <td>
                                <a class="btn btn-secondary">Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-danger">No Category to show</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


